# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copiar a .env y llenar los valores
# ===========================================

# App Configuration
APP_PORT=3035
APP_VERSION=1.0.0
APP_URL=https://tu-frontend.com
API_URL=https://tu-api.com
LOG_LEVEL=info

# Security Keys (generar valores seguros)
ARTIFACT_KEY=your-secure-artifact-key
SESSION_SIGNATURE=your-secure-session-signature-min-32-chars
GATE_SIGNATURE=your-secure-gate-signature-min-32-chars

# Azure/Microsoft Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_USER_EMAIL=your-azure-email@domain.com

# Reading Limits
MAX_READ_NETFLIX_EMAILS=10
