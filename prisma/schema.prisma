generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model OAuthToken {
  id           Int      @id @default(autoincrement())
  provider     String   
  userEmail    String
  refreshToken String
  accessToken  String
  expiresAt    DateTime?
  scope        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([provider, userEmail])
}


model emails {
  id           Int      @id @default(autoincrement())
  provider     String   
  userEmail    String
  refreshToken String
  accessToken  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([provider, userEmail])
}
